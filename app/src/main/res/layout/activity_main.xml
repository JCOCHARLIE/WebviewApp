<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/absa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/citi"
        app:layout_constraintEnd_toStartOf="@+id/barclays"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/absa" />

    <ImageView
        android:id="@+id/barclays"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toTopOf="@+id/equity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/absa"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/barclays" />

    <ImageView
        android:id="@+id/citi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toTopOf="@+id/stanchart"
        app:layout_constraintEnd_toStartOf="@+id/equity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/absa"
        app:srcCompat="@drawable/citi" />

    <ImageView
        android:id="@+id/equity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="281dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/citi"
        app:layout_constraintTop_toBottomOf="@+id/barclays"
        app:srcCompat="@drawable/equity" />

    <ImageView
        android:id="@+id/stanchart"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/citi"
        app:srcCompat="@drawable/stanchart" />

</androidx.constraintlayout.widget.ConstraintLayout>